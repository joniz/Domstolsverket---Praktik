<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Domstol.App">
	<Application.Resources>

		<ResourceDictionary>
			
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="FontAttributes" Value="Bold"/>
				<Setter Property="BorderRadius" Value="8"/>
				<Setter Property="BackgroundColor" Value="#E0E0E0"/>
				<Setter Property="TextColor" Value="#0d0d0d"/>
				<Setter Property="FontSize" Value="Large"/>
				<Setter Property="BorderWidth" Value="2"/>
				<Setter Property="BorderColor" Value="#C0C0C0"/>
            </Style>


			
			<Style x:Key="RedLine" TargetType="Label">
				<Setter Property="Margin" Value="-6"/>
				<Setter Property="BackgroundColor" Value="#CC6666"/>
					

			</Style>

			
			<OnPlatform x:Key="tabbedBarColor"
              x:TypeArguments="Color"
              iOS="#ffffff"
              Android="#6699CC"
              WinPhone="#80FF80" />

			<OnPlatform x:Key="NavigationBarColor"
              x:TypeArguments="Color"
              iOS="#ffffff"
              Android="#6699CC"
              WinPhone="#80FF80" />
  				
        </ResourceDictionary>

	</Application.Resources>
</Application>