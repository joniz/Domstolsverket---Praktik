<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Domstol.ProblemTypePage"

	>

	<ContentPage.Content>
		
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height ="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>

				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>


				<Image x:Name="Roompic"
				Grid.Row="0"
				Grid.Column="1"
				Grid.ColumnSpan="8"
				Aspect="AspectFill"
				/>

				<Label Text="Vad behöver du hjälp med?"
				FontSize="Large"
				TextColor="#6699CC"
				FontAttributes="Bold"
				Grid.Column = "2"
				Grid.Row = "1"
				Grid.ColumnSpan = "7"
				/>

			
				<Button Text="Ljud" Clicked="ButtonClicked"
				Style="{StaticResource ButtonStyle}"
				Grid.Row="2"
				Grid.Column = "2"
				Grid.ColumnSpan="6"


				/>

			
				<Button Text="Bild" Clicked="ButtonClicked"
				Style="{StaticResource ButtonStyle}"
				Grid.Row="3"
				Grid.Column = "2"
				Grid.ColumnSpan="6"


				/>
			
				

				<Label
				Style="{StaticResource RedLine}"
				Grid.Row="0"
				Grid.Column="0"
				Grid.RowSpan="8"


				/>
			</Grid>
		


		
	</ContentPage.Content>
</ContentPage>
