<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Domstol.AllQuestionsPage">
	<ContentPage.Content>
		<Grid>
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>


			
			<ListView x:Name="QuestionListView" 
			ItemSelected="questionSelected"
			Grid.Row="0"
			Grid.Column="1"
			SeparatorColor="Black"
				>

          <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
						<Label LineBreakMode="TailTruncation" 
							Text="{Binding questionText}"
							Margin="15,10,0,0"
							/>
                         
                    </ViewCell>
						

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label
		Style="{StaticResource RedLine}"
        Grid.Row="0"
		Grid.Column="0"



			/>


			
			
		</Grid>
		
	</ContentPage.Content>
</ContentPage>
