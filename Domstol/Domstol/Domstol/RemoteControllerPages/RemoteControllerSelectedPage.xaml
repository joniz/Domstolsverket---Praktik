<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Domstol.RemoteControllerSelectedPage">
	<ContentPage.Content>

		<Grid x:Name="TheGrid" RowSpacing="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>



			<StackLayout Orientation="Vertical"
				x:Name="ButtonStack2"
				Grid.Column="0"
				Grid.Row="1"

			/>



			
			<Image
				Grid.Row="1"
				Grid.Column="1"
				x:Name="ControllerImage"

			/>

		


			
			<StackLayout Orientation="Vertical"
				x:Name="ButtonStack"
				Grid.Column="2"
				Grid.Row="1"

			/>


			</Grid>
		
	</ContentPage.Content>
</ContentPage>
