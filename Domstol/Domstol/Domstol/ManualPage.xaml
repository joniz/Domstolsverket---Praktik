<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Domstol"
             x:Class="Domstol.ManualPage"
             Title="Manual" Icon="manual"
            >
    <ContentPage.Content>

        <ListView x:Name="itemlist" RowHeight="60" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="15">
                            <Image Source="{Binding imagename, StringFormat='{0}.png'}"/>
                            <StackLayout Orientation ="Vertical">
                                <Label Text="{Binding name}" Font="Large"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </ContentPage.Content>


</ContentPage>